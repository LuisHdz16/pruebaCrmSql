@model CRMBASEDEDATOS.Models.Curso

@{
    ViewData["Title"] = "Eliminar Curso";
}

<h1>@ViewData["Title"]</h1>
<div class="alert alert-warning" role="alert">
    <h3>¿Está seguro de que desea eliminar este curso?</h3>
    <p class="mb-0">Esta acción no se puede deshacer.</p>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <h4>Detalles del Curso</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nombre)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Descripcion)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Descripcion)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Estatus)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Estatus)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="IdCurso" />
            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
        </form>
    </div>
</div>
