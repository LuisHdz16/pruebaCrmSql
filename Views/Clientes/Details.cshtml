@model CRMBASEDEDATOS.Models.Cliente

@{
    ViewData["Title"] = "Detalles del Cliente";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<div class="card shadow-sm">
    <div class="card-body">
        <h4 class="card-title">Detalles del cliente</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3 fw-bold">Cliente</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre)</dd>

            <dt class="col-sm-3 fw-bold">Tratamiento</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Apellidos)</dd>

            <dt class="col-sm-3 fw-bold">Promoción</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Telefono)</dd>

            <dt class="col-sm-3 fw-bold">Correo</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Correo)</dd>
        </dl>
    </div>
</div>
<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model?.IdCliente" class="btn btn-warning">Editar</a> |
    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
</div>