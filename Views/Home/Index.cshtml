@model CRMBASEDEDATOS.Models.DashboardViewModel  // Cambia a un solo objeto

<h1>Inicio</h1>

<h2>Citas de Hoy</h2>
<ul>
    @foreach (var cita in Model.CitasHoy)
    {
        <li>@cita.IdCliente (Fecha: @cita.Fecha)</li>
    }
</ul>

<h2>Promociones Activas</h2>
<ul>
    @foreach (var promocion in Model.PromocionesActivas)
    {
        <li>@promocion.Descripcion (Válida hasta: @promocion.Estatus)</li>
    }
</ul>
