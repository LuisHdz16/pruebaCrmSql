@model CRMBASEDEDATOS.Models.Cita

@{
    ViewData["Title"] = "Detalles de la Cita";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<div class="card shadow-sm">
    <div class="card-body">
        <h4 class="card-title">Detalles de la Cita</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3 fw-bold">Cliente</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.IdClienteNavigation.Nombre)</dd>

            <dt class="col-sm-3 fw-bold">Tratamiento</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.IdTratamientoNavigation.Nombre)</dd>

            <dt class="col-sm-3 fw-bold">Promoción</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.IdPromocionNavigation.Nombre)</dd>

            <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Fecha)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Fecha)</dd>

            <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Precio)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Precio)</dd>

            <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Estatus)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Estatus)</dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model?.IdCita" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
