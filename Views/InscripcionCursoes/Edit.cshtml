@model CRMBASEDEDATOS.Models.InscripcionCurso

@{
    ViewData["Title"] = "Editar Inscripción de Curso";
}

<h1>@ViewData["Title"]</h1>

<h4>Inscripción de Curso</h4>
<hr />
<div class="row">
    <div class="col-md-6 col-lg-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdInscripcion" />

            <div class="form-group mb-3">
                <label asp-for="IdCliente" class="control-label"></label>
                <select asp-for="IdCliente" class="form-control" asp-items="ViewBag.IdCliente" required>
                    <option value="">Seleccione una opción....</option>

                </select>
                <span asp-validation-for="IdCliente" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="IdCurso" class="control-label"></label>
                <select asp-for="IdCurso" class="form-control" asp-items="ViewBag.IdCurso" required>
                    <option value="">Seleccione una opción....</option>

                </select>
                <span asp-validation-for="IdCurso" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="FechaInicio" class="control-label"></label>
                <input asp-for="FechaInicio" type="date" class="form-control" required />
                <span asp-validation-for="FechaInicio" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="FechaFin" class="control-label"></label>
                <input asp-for="FechaFin" type="date" class="form-control" required />
                <span asp-validation-for="FechaFin" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Duracion" class="control-label"></label>
                <input asp-for="Duracion" type="number" class="form-control" min="1" required />
                <span asp-validation-for="Duracion" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="PrecioTotal" class="control-label"></label>
                <input asp-for="PrecioTotal" type="number" step="0.01" class="form-control" min="0" required />
                <span asp-validation-for="PrecioTotal" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Estatus" class="control-label"></label>
                <select asp-for="Estatus" class="form-control" required>
                    <option value="">Seleccione un estatus</option>
                    <option value="En curso">En curso</option>
                    <option value="Realizado">Realizado</option>
                    <option value="Por Realizar">Por Realizar</option>
                </select>
                <span asp-validation-for="Estatus" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
