@model CRMBASEDEDATOS.Models.Tratamiento

@{
    ViewData["Title"] = "Eliminar Tratamiento";
}

<h1>@ViewData["Title"]</h1>
<div class="alert alert-warning" role="alert">
    <h3>¿Está seguro de que desea eliminar este tratamiento?</h3>
    <p class="mb-0">Esta acción no se puede deshacer.</p>
</div>
<div class="card shadow-sm">
    <div class="card-body">
        <h4>Tratamiento</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nombre)
            </dd>
            <dt class="col-sm-2">
                Descripción
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Descripcion)
            </dd>
            <dt class="col-sm-2">
                Duración Estimada
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DuracionEstimada)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="IdTratamiento" />
            <input type="submit" value="Eliminar" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
        </form>
    </div>
</div>

