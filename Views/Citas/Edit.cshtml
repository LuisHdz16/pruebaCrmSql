@model CRMBASEDEDATOS.Models.Cita

@{
    ViewData["Title"] = "Editar Cita";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<h4>Detalles de la Cita</h4>
<hr />
<div class="row">
    <div class="col-md-6 col-lg-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <input type="hidden" asp-for="IdCita" />

            <div class="form-group mb-3">
                <label asp-for="IdCliente" class="control-label"></label>
                <select asp-for="IdCliente" class="form-control" asp-items="ViewBag.IdCliente">
                    <option value="" selected>Seleccione una opción....</option>
                </select>
                <span asp-validation-for="IdCliente" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="IdTratamiento" class="control-label"></label>
                <select asp-for="IdTratamiento" class="form-control" asp-items="ViewBag.IdTratamiento">
                    <option value="" selected>Seleccione una opción....</option>
                </select>
                <span asp-validation-for="IdTratamiento" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="IdPromocion" class="control-label"></label>
                <select asp-for="IdPromocion" class="form-control" asp-items="ViewBag.IdPromocion">
                    <option selected>Seleccione una opción....</option>
                </select>
                <span asp-validation-for="IdPromocion" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" class="form-control" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Estatus" class="control-label"></label>
                <select asp-for="Estatus" class="form-control" required>
                    <option value="Próximamente">Próximamente</option>
                    <option value="Realizado">Realizado</option>
                    <option value="Cancelado">Cancelado</option>
                </select>
                <span asp-validation-for="Estatus" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
