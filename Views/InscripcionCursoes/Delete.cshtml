@model CRMBASEDEDATOS.Models.InscripcionCurso

@{
    ViewData["Title"] = "Eliminar Inscripción de Curso";
}

<h1>@ViewData["Title"]</h1>
<div class="alert alert-warning" role="alert">
    <h3>¿Está seguro de que desea eliminar esta inscripción?</h3>
    <p class="mb-0">Esta acción no se puede deshacer.</p>
</div>
<div class="card shadow-sm">
    <div class="card-body">
        <h4>Inscripción de Curso</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Cliente
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IdClienteNavigation.Nombre)
            </dd>

            <dt class="col-sm-2">
                Curso
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IdCursoNavigation.Nombre)
            </dd>

            <dt class="col-sm-2">
                Fecha de Inicio
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FechaInicio)
            </dd>

            <dt class="col-sm-2">
                Fecha de Fin
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FechaFin)
            </dd>

            <dt class="col-sm-2">
                Duración (días)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Duracion)
            </dd>

            <dt class="col-sm-2">
                Precio Total
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PrecioTotal)
            </dd>

            <dt class="col-sm-2">
                Estatus
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Estatus)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="IdInscripcion" />
            <input type="submit" value="Eliminar" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
        </form>
    </div>
</div>

